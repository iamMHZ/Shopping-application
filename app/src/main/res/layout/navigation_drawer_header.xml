<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/register_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_4_x_large_margin"
        android:src="@drawable/ic_person_black_24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/register_icon"
        android:layout_marginBottom="-2dp"
        android:layout_toLeftOf="@+id/register_icon"
        android:background="@drawable/register_button_style"
        android:gravity="center"
        android:text="ورود و ثبت نام" />

</RelativeLayout>